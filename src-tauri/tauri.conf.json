{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "reina-manager",
  "version": "../package.json",
  "identifier": "com.reinamanager.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ReinaManager",
        "width": 1200,
        "height": 700,
        "minWidth": 962,
        "minHeight": 542,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/reina.png",
      "icons/reina-128.png",
      "icons/reina.ico"
    ],
    "copyright": "Â© Copyright 2025 huoshen80",
    "windows": {
        "nsis": {
          "installerIcon": "icons/reina.ico"
        }
      }
  }
}